@model List<Nursan.API.Controllers.ApiKeyViewModel>
@{
    ViewData["Title"] = "Управление на API Keys";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Управление на API Keys</h2>
    <a href="@Url.Action("Create", "ApiKeyManagement")" class="btn btn-success">+ Създай нов API Key</a>
</div>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">
        Няма създадени API Keys. <a href="@Url.Action("Create")">Създай първия</a>
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Device ID</th>
                    <th>Име на станция</th>
                    <th>Статус</th>
                    <th>Създаден</th>
                    <th>Последно използване</th>
                    <th>Заявки</th>
                    <th>Създаден от</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><strong>@item.DeviceId</strong></td>
                        <td>@(item.DeviceName ?? "-")</td>
                        <td>
                            @if (item.IsActive)
                            {
                                <span class="badge bg-success">Активен</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Деактивиран</span>
                            }
                        </td>
                        <td>@item.CreatedDate.ToString("dd.MM.yyyy HH:mm")</td>
                        <td>@(item.LastUsedDate?.ToString("dd.MM.yyyy HH:mm") ?? "Никога")</td>
                        <td>@item.RequestCount</td>
                        <td>@(item.CreatedBy ?? "-")</td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <a href="@Url.Action("Details", new { deviceId = item.DeviceId })" class="btn btn-info">Детайли</a>
                                
                                @if (item.IsActive)
                                {
                                    <form method="post" asp-action="Revoke" style="display: inline;" onsubmit="return confirm('Сигурни ли сте, че искате да деактивирате този API Key?');">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="deviceId" value="@item.DeviceId" />
                                        <button type="submit" class="btn btn-warning">Деактивирай</button>
                                    </form>
                                }
                                else
                                {
                                    <form method="post" asp-action="Activate" style="display: inline;">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="deviceId" value="@item.DeviceId" />
                                        <button type="submit" class="btn btn-success">Активирай</button>
                                    </form>
                                }
                                
                                <form method="post" asp-action="Regenerate" style="display: inline;" onsubmit="return confirm('Сигурни ли сте, че искате да регенерирате API Key? Старият ключ няма да работи!');">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="deviceId" value="@item.DeviceId" />
                                    <input type="hidden" name="deviceName" value="@item.DeviceName" />
                                    <button type="submit" class="btn btn-secondary">Регенерирай</button>
                                </form>
                                
                                <form method="post" asp-action="Delete" style="display: inline;" onsubmit="return confirm('Сигурни ли сте, че искате да изтриете този API Key? Действието е необратимо!');">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="deviceId" value="@item.DeviceId" />
                                    <button type="submit" class="btn btn-danger">Изтрий</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

