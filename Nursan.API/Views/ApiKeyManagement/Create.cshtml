@model Nursan.API.Controllers.CreateApiKeyViewModel
@{
    ViewData["Title"] = "Създай нов API Key";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4>Създай нов API Key за станция</h4>
            </div>
            <div class="card-body">
                <form method="post" asp-action="Create">
                    @Html.AntiForgeryToken()
                    
                    <div class="mb-3">
                        <label asp-for="DeviceId" class="form-label"></label>
                        <input asp-for="DeviceId" class="form-control" placeholder="Напр: COMPUTER-001, STATION-A" />
                        <span asp-validation-for="DeviceId" class="text-danger"></span>
                        <small class="form-text text-muted">Уникален идентификатор на станцията/устройството</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DeviceName" class="form-label"></label>
                        <input asp-for="DeviceName" class="form-control" placeholder="Напр: Production PC 1" />
                        <span asp-validation-for="DeviceName" class="text-danger"></span>
                        <small class="form-text text-muted">Име/описание на станцията (опционално)</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Допълнителни бележки"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">Създай API Key</button>
                        <a href="@Url.Action("Index")" class="btn btn-secondary">Отказ</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

